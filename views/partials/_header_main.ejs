<body>
    <header class="main-header">
        <nav class="nav-container">
            <div class="logo">
                <a href="/">BudgetTravel</a>
            </div>

            <button class="hamburger-menu" id="hamburgerMenu">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <div class="nav-menu" id="navMenu">
                <ul class="nav-links">
                    <li><a href="/">Ana Sayfa</a></li>
                    <li><a href="/about">Hakkımızda</a></li>
                    <li><a href="/routes">Rotalar</a></li>
                    <li><a href="/destinations">Destinasyonlar</a></li>
                    <li><a href="/contact">İletişim</a></li>
                </ul>
            </div>

            <div class="nav-right">
                <div class="app-buttons">
                    <a href="#" class="app-button android">
                        <i class="fab fa-android"></i>
                        <span>Android</span>
                    </a>
                    <a href="#" class="app-button ios">
                        <i class="fab fa-apple"></i>
                        <span>iOS</span>
                    </a>
                </div>
                
                <div class="rainbow-buttons" id="authButtonsContainer"> 
                    <a href="/signin" class="rainbow-button signin" id="signinLink">
                        <i class="fas fa-sign-in-alt"></i>
                        Giriş Yap
                    </a>
                    <a href="/signup" class="rainbow-button signup" id="signupLink">
                        <i class="fas fa-user-plus"></i>
                        Kayıt Ol
                    </a>
                </div>
                
                <div class="profile-menu-container" id="profileMenuContainer">
                    <div class="profile-icon">
                        <span class="initial" id="profileInitial"></span> 
                        </div>
                    <ul class="dropdown-menu" id="profileDropdownMenu">
                        <li><a href="/profile">Profilim</a></li>
                        <li><a href="/settings">Ayarlar</a></li>
                        <li><a href="/logout">Çıkış Yap</a></li>
                    </ul>
                </div>

                <div class="search-container">
                    <button class="search-toggle" id="searchToggle">
                        <i class="fas fa-search"></i>
                    </button>
                    <div class="search-box" id="searchBox">
                        <input type="text" placeholder="Ara...">
                        <button class="search-close" id="searchClose">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                </div>
        </nav>
    </header>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elementleri seçiyoruz
            const authButtonsContainer = document.getElementById('authButtonsContainer'); // Giriş/Kayıt butonlarını içeren div
            const profileMenuContainer = document.getElementById('profileMenuContainer');
            const profileDropdownMenu = document.getElementById('profileDropdownMenu');
            const profileInitial = document.getElementById('profileInitial');
            
            // Kullanıcının oturum durumunu ve kullanıcı adını localStorage'dan alıyoruz
            // Güvenlik için bu kontrolün sunucu tarafında da yapıldığından emin olun!
            const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
            const username = localStorage.getItem('loggedInUsername'); 

            // Navbar'daki öğelerin görünürlüğünü ayarlama mantığı
            if (isLoggedIn) {
                authButtonsContainer.classList.add('hidden'); // Giriş/Kayıt butonlarını gizle
                profileMenuContainer.style.display = 'block'; // Profil menüsünü göster

                if (username) {
                    profileInitial.textContent = username.charAt(0).toUpperCase(); // Kullanıcı adının ilk harfini al
                } else {
                    profileInitial.textContent = 'M'; // Kullanıcı adı yoksa varsayılan baş harf
                }

            } else {
                authButtonsContainer.classList.remove('hidden'); // Giriş/Kayıt butonlarını göster
                profileMenuContainer.style.display = 'none'; // Profil menüsünü gizle
            }

            // Profil ikonuna tıklayınca menüyü aç/kapa
            profileMenuContainer.addEventListener('click', function(event) {
                event.stopPropagation(); // Olayın daha geniş alanlara yayılmasını engelle
                profileDropdownMenu.classList.toggle('show');
            });

            // Menü dışına tıklayınca menüyü kapat
            document.addEventListener('click', function(event) {
                if (!profileMenuContainer.contains(event.target)) {
                    profileDropdownMenu.classList.remove('show');
                }
            });

            // --- Mevcut Hamburger menü ve Arama kutusu JS'niz (script.js dosyanızda da olabilir) ---
            // Bu kısım genellikle script.js dosyanızda bulunur. Eğer oradaysa, buraya kopyalamayın.
            // Eğer yoksa, aşağıdakileri eklemeniz gerekir:

            const hamburgerMenu = document.getElementById('hamburgerMenu');
            const navMenu = document.getElementById('navMenu');
            if (hamburgerMenu && navMenu) {
                hamburgerMenu.addEventListener('click', () => {
                    navMenu.classList.toggle('active');
                    hamburgerMenu.classList.toggle('active'); // Hamburger ikonunun da değişmesini sağlayabilir
                });
            }

            const searchToggle = document.getElementById('searchToggle');
            const searchBox = document.getElementById('searchBox');
            const searchClose = document.getElementById('searchClose');
            const searchContainer = document.querySelector('.search-container'); 

            if (searchToggle && searchBox && searchClose && searchContainer) {
                searchToggle.addEventListener('click', () => {
                    searchBox.classList.add('active');
                    searchBox.querySelector('input').focus();
                });
                searchClose.addEventListener('click', () => {
                    searchBox.classList.remove('active');
                });
                document.addEventListener('click', (event) => {
                    if (!searchContainer.contains(event.target) && !searchBox.contains(event.target) && searchBox.classList.contains('active')) {
                        searchBox.classList.remove('active');
                    }
                });
            }
        });
    </script>
</body>

</html>